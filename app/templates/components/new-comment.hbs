{{#if addNewComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <button {{action 'saveComment'}}>Save</button>
    </form>
  </div>
{{else}}
  <br><button class="btn btn-success" {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
